<div class="row justify-content-md-center">
  <% @messages.each do |message| %>
    <div class="col-md-8">
      <div class="message">
        <h2 class="message-title"><%= message.title %></h2>
        <%= link_to "Join Convo", message, class: "btn-custom" %>
      </div>
    </div>  
  <% end %>
</div>