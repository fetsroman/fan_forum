<div class="row justify-content-md-center">
  <div class="col-md-10">
    <div class="message-show">
      <h2><%= @message.title %></h2>
      <p class="message-poted-by"><%= time_ago_in_words(@message.created_at) %></p>
      <p class="message-decs"><%= @message.description %></p>

      <div class="links btn-group">
        <%= link_to 'Back', root_path, class: "btn btn-secondary" %>
          <% if user_signed_in? %>
            <% if @message.user_id == current_user.id %>
              <%= link_to 'Fix', edit_message_path(@message), class: "btn btn-primary" %>
              <%= link_to 'Delete', message_path(@message), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
            <% end %>
          <% end %>
      </div>
    </div>

    <div class="message-show">  
      <h3 class="comment-section-header">Comments:</h3>
      <p><%= render @message.comments %></p>

      <h3 class="reply-to-msg">Join Discussion:</h3>
      <%= render "comments/form" %>
    </div>
  </div>
</div>